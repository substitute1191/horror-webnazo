{
  "roots": ["<rootDir>/src"],
  "testMatch": [
    "**/__tests__/**/*.+(ts|tsx|js|jsx)",
    "**/?(*.)+(spec|test).+(ts|tsx|js|jsx)"
  ],
  "transform": {
    "^.+\\.(ts|tsx|js|jsx)$": "ts-jest"
  },
  "testEnvironment": "jest-environment-jsdom",
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1",
    "\\.(mp3|wav|ogg)$": "<rootDir>/__mocks__/fileMock.js"
  },
  "setupFilesAfterEnv": ["<rootDir>/jest.setup.ts"]
}
